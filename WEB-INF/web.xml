<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
             http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" 
         version="3.0">
    
    <!-- Servlet declaration -->
    <servlet>
        <servlet-name>SubmitRecipeServlet</servlet-name>
        <servlet-class>servlets.SubmitRecipeServlet</servlet-class>
    </servlet>

    <!-- Servlet mapping -->
    <servlet-mapping>
        <servlet-name>SubmitRecipeServlet</servlet-name>
        <url-pattern>/SubmitRecipeServlet</url-pattern>
    </servlet-mapping>

</web-app>
